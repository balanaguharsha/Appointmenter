<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".BookAppointment">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/entry_button"
        android:text="TextView"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:layout_marginBottom="20dp"
        android:textSize="24sp"
        app:fontFamily="casual" />

    <Button
        android:id="@+id/date"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_button"
        android:text="Pick date"
        android:textAllCaps="false"
        android:textColor="#ffff" />

    <TextView

        android:id="@+id/selectedDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"

        android:text="TextView" />

    <Button
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/register_button"
        android:layout_marginBottom="5dp"

        android:text="Pick time"
        android:textAllCaps="false"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/selectedTime"
        android:layout_marginBottom="15dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/durationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:helperText="Good things take time!"
        app:helperTextEnabled="true"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/duration"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Required duration (minutes)"
            android:inputType="number"
            android:textColor="@color/colorPrimary" />

    </android.support.design.widget.TextInputLayout>
    <Spinner
        android:id="@+id/typeOfMeeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="75dp"/>
    <Button
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/gobutton"
        android:text="Check availability and book"
        android:textAllCaps="false"
        android:textColor="#ffff" />

    <TextView
        android:id="@+id/isMaamIn"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:background="#000"
        android:layout_height="wrap_content" />

</LinearLayout>
</ScrollView>